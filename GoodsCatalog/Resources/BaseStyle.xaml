<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Margin">
        <Setter Property="ItemsControl.Margin" Value="5"/>
    </Style>
    <Style x:Key="Paddind">
        <Setter Property="ItemsControl.Padding" Value="4"/>
    </Style>
    <Style x:Key="Font">
        <Setter Property="ItemsControl.FontSize" Value="12"/>
        <Setter Property="ItemsControl.Margin" Value="5"/>
    </Style>
    <Style TargetType="MenuItem" BasedOn="{StaticResource Font}"/>
</ResourceDictionary>