<Window x:Class="GoodsCatalog.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsCatalog"
        mc:Ignorable="d"
        Title="Каталог товарів" Height="450" Width="800"
        Icon="../Images/Icons/favicon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="Управління товарами">
                <MenuItem.Icon>
                    <Image Source="../Images/Icons/manageProductsIcon.ico"/>
                </MenuItem.Icon>
                <MenuItem Header="Додати товар" >
                    <MenuItem.Icon>
                        <Image Source="../Images/Icons/addProductIcon.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Редагувати товар">
                    <MenuItem.Icon>
                        <Image Source="../Images/Icons/editProductIcon.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Видалити товар">
                    <MenuItem.Icon>
                        <Image Source="../Images/Icons/delProductIcon.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Управління категоріями">
                <MenuItem.Icon>
                    <Image Source="../Images/Icons/manageCategoriesIcon.ico"/>
                </MenuItem.Icon>
                <MenuItem Header="Додати категорію">
                    <MenuItem.Icon>
                        <Image Source="../Images/Icons/addCategoryIcon.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Редагувати категорію">
                    <MenuItem.Icon>
                        <Image Source="../Images/Icons/editCategoryIcon.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Видалити категорію">
                    <MenuItem.Icon>
                        <Image Source="../Images/Icons/delCategoryIcon.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TreeView x:Name="CategoriesList" Grid.Row="1" Grid.Column="0">
            <TreeViewItem Header="Категорії">
            </TreeViewItem>
        </TreeView>
    </Grid>
</Window>
